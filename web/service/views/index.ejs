<style type="text/css">

  [data-ng-cloak].controller {
    display: none !important;
  }

  @keyframes rotate360 {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @-webkit-keyframes rotate360 {
    from { -webkit-transform: rotate(0deg); }
    to { -webkit-transform: rotate(360deg); }
  }

  .splash {
    display:block;
    position:absolute; top:0; left:0; width:100%; height:100%;
    background-color: #eeeeee;
  }

  .splash div {

    border-radius: 50px;
    border-style: solid;
    border-bottom-color: coral;
    border-top-color: cornflowerblue;
    border-left-color: gold;
    border-right-color: lime;
    animation: rotate360 1s linear infinite;
    -webkit-animation: rotate360 1s linear infinite;
    border-width: 6px;

    width: 60px;
    height:60px;

    text-align: center;
    position: fixed;
    margin: 0 auto;
    
    top: 50%;
    left: 50%;
    margin-top:-30px;
    margin-left:-30px;
  }

</style>

<div ng-controller="boot">
  <div class="splash" data-ng-hide="visible">
    <div></div>
  </div>
  <div class="controller" data-ng-show="visible" data-ng-cloak="">
    <%- partial ('../.tmp/public/service/templates/header.html') %>
    <%- partial ('../.tmp/public/service/templates/spinner.html') %>
    <div ui-view></div>
    <%- partial ('../.tmp/public/service/templates/alerts.html') %>
    <%- partial ('../.tmp/public/service/templates/footer.html') %>
  </div>
</div>