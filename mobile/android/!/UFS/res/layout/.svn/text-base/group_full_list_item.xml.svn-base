<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gbli_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table_center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/gbli_actual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icn_new" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gbli_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#838e90" />

        <TextView
            android:id="@+id/gbli_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="#263f61"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:src="@drawable/icn_arrow" />

</LinearLayout>
