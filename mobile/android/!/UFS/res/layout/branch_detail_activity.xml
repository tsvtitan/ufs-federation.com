<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ufs="http://schemas.android.com/apk/res/ru.ideast.ufs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ru.ideast.ufs.widgets.ActionBarUfs
        android:id="@+id/bda_action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        ufs:left_btn="@drawable/btn_back_selector" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/bda_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bda_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="#687373"
                android:textSize="16dp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp" >

                <FrameLayout
                    android:id="@+id/bda_container_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <View
                    android:id="@+id/bda_invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
